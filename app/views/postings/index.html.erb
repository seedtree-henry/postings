<h1>Listing All Postings</h1>

<form method="POST">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="title" class="form-control" name="title" id="title">
  </div>
  <div class="form-group">
    <label for="body">Body:</label>
    <textarea class="form-control" rows="5" name="body" id="body"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% @all_postings.each do |p| %>
  <h2>Title : <%= p.title %></h2>
  <p><%= p.body %></p>
  <form action="/comment/create" method="POST">
    <label for="comment">Add a comment:</label>
    <%= hidden_field_tag(:id_of_posting, p.id) %>
    <input type="comment" class="form-control" name="content" id="comment"><br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <% @all_comments.each do |c| %>
    <% if c.posting_id == p.id %>
      <p><%= c.content %></p>
    <% end %>
  <% end %>
<% end %>
